" Lines and columns displayed at the bottom right
set ruler

"Highlights 2 consecutive spaces or trailing newlines
syntax match doublespace "  \|\s$"
highlight doublespace ctermbg=yellow

" Disable coloration and indentation (every filetype plugin in general)
filetype indent off "Disable indentation for all filetypes
filetype plugin off "Disable Plugins for all filetypes

" Activates indent only for c files
augroup c_files
autocmd!
	autocmd FileType c set autoindent "Enable auto indentation (copy indentation of the line above)
	autocmd FileType c set smartindent "Enable smartindent
augroup END

" Sets up backupdir and backup option
set backup
set backupdir=~/.vim/backup
set dir=~/.vim/swap

innoremap { <cr>}
